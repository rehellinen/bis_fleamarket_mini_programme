.order-container{  
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
  width: 750rpx;
  align-items: center;
  min-height: 100vh;
}

.text-container{
  display: flex;
  justify-content: center;
  padding: 25rpx 0;
  align-items: center;
  background-color: white;
  width: 750rpx;
}

.text-container text{
  font-size: 32rpx;
  color: #989898;  
}

.image-top-container{
  margin-top: 20rpx;
}

.image-top{
  width: 750rpx;
  height: 300rpx;
}

.income-container{
  color: #989898;  
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 750rpx;
  margin-top: 20rpx
}

.single-container{
  width: 750rpx;
  display: flex;
  height: 110rpx;
  align-items: center;
  background-color: white;
  margin-top: 10rpx;
}

.title{
  flex-basis: 250rpx;
  display: flex;
  justify-content: center;
  border-right: 1rpx solid #989898;
  font-size: 32rpx;
}

.quantity{
  font-size: 32rpx; 
  margin-left: 200rpx;
}