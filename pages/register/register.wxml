<view class="register-container">
  <view class='text-container'>
    <text>注 册 {{type}}</text>
  </view>
  <form bindsubmit="formSubmit">
    <view class="section">
      <text>名称：</text>
      <input name="name" auto-focus />
    </view>

    <view class="section">
      <text>学号：</text>
      <input type="number" name="number" />
    </view>

    <view class="section">
      <text>手机：</text>
      <input type="number" name="telephone" />
    </view>

    <view class="section">
      <text>微信：</text>
      <input name="weixin" />
    </view>

    <view class="section">
      <text>宿舍：</text>
      <input type="number" name="dormitory" />
    </view>

    <view class="section">
      <text>邮箱：</text>
      <input name="email" />
    </view>

    <view class="section">
      <text>支付宝：</text>
      <input name="zhifubao" />
    </view>
    <button class="submit-btn" formType="submit">提交</button>
  </form>
</view>