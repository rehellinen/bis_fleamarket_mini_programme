.register-container{
  background-color: #F9F9F9;
}

.text-container{
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
  background-color: white;
  height: 90rpx;
  align-items: center;
  color: #989898;
  font-size: 32rpx;
}

form {
  display: block;
  background-color: white; 
}

.section {
  border-bottom: 1rpx solid #e9e9e9;
  margin-left: 30rpx;
  width: 690rpx;
  display: flex;
  align-items: center;
}

.section text {
  font-size: 28rpx;
  color: #7c7c7c;
}

.section input {
  font-size: 28rpx;
  color: #7c7c7c;
  padding: 20rpx 0;
}

.section textarea {
  font-size: 28rpx;
  color: #7c7c7c;
  padding: 20rpx 0;
  height: 95rpx
}

.submit-btn {
  margin: 30rpx;
}

.counts-icon {
  height: 20rpx;
  width: 20rpx;
}

.major-text{
  width: 100rpx;
}
