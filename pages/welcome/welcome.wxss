.background{
  width: 750rpx;
  min-height: 100vh;
  position: fixed;
  z-index: -10;
}

.button-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 50vh;
}

.button-container view:first-child{
  margin-bottom: 30rpx;
}

.button{
  background-color: #cde0ed;
  border-radius: 20rpx;
  width: 440rpx;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: center
}

.button text{
  color: #8496a3;
  
}

.title{
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.detail{
  font-size: 24rpx;
}