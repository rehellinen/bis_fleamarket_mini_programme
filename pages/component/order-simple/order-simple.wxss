.single-container{
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e9e9e9;
  background-color: white;
}

.single-container>view{
  display: flex;
  flex-direction: column;
  padding: 15rpx 25rpx;
}

.status{
  font-size: 34rpx;
  color: #beac96;
}

.order-name{
  font-size: 30rpx;
  margin-top: 10rpx;
  color: #2e2e2e
}

.price{
  font-size: 34rpx;
  color: #aa926e;
}

.time{
  font-size: 26rpx;
  margin-top: 15rpx;
  color: #c4c4c4;
}

.icon{
  color: #b04245;
  font-size: 30rpx;
  border: 2rpx solid #b04245;
  border-radius: 50%;
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 3rpx;
}

 .icon-status-container{
  display: flex;
  flex-direction: row;
} 